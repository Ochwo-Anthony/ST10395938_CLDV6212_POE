@model IEnumerable<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "Orders";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center bg-warning text-white">
        <h4 class="mb-0"><i class="fas fa-box"></i> Orders</h4>
        <a asp-action="Create" class="btn btn-light btn-sm">
            <i class="fas fa-plus-circle"></i> Add Order
        </a>
    </div>

    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Username</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Total Price</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><code>@order.OrderID.Substring(0, 8)...</code></td>
                                <td>@order.Username</td>
                                <td>@order.ProductName</td>
                                <td>@order.Quantity</td>
                                <td class="fw-bold text-success">@order.TotalPrice.ToString("C")</td>
                                <td>
                                    <span class="badge bg-@(GetStatusBadgeClass(order.Status))">@order.Status</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@order.RowKey" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@order.RowKey" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete('@order.RowKey', '@order.OrderID')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No orders found.
                <a asp-action="Create" class="alert-link">Add your first order</a>!
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle"></i> Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete order <strong id="orderId"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(orderId, displayId) {
            document.getElementById('orderId').textContent = displayId;
            document.getElementById('deleteForm').action = '/Order/Delete/' + orderId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}

@functions {
    string GetStatusBadgeClass(string status) => status?.ToLower() switch
    {
        "submitted" => "warning",
        "processing" => "info",
        "completed" => "success",
        "cancelled" => "danger",
        _ => "secondary"
    };
}
